{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "lib": ["es2020"],
    "target": "es2024",
    "module": "NodeNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@core/*": ["core/*"],
      "@keys/*": ["keys/*"],
      "@middleware/*": ["middleware/*"],
      "@migrations/*": ["migrations/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@schemas/*": ["schemas/*"],
      "@utils/*": ["utils/*"]
    }
  }
}
