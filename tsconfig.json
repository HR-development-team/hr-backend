{
  "include": ["server.ts", "src/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "lib": ["es2020"],
    "target": "es2024",
    "module": "NodeNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": "./",
    "paths": {
      "core/*": ["src/core/*"],
      "types/*": ["src/types/*"],
      "@controllers/*": ["src/controllers/*"],
      "@core/*": ["src/core/*"],
      "@keys/*": ["src/keys/*"],
      "@middleware/*": ["src/middleware/*"],
      "@migrations/*": ["src/migrations/*"],
      "@models/*": ["src/models/*"],
      "@routes/*": ["src/routes/*"],
      "@schemas/*": ["src/schemas/*"],
      "@utils/*": ["src/utils/*"],
      "@constants/*": ["src/constants/*"]
    }
  }
}
